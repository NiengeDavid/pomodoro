{
  "$schema": "http://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-tailwindcss"],

  "semi"          : false,
  "tabWidth"      : 2,
  "printWidth"    : 100,
  "endOfLine"     : "lf",
  "singleQuote"   : true,
  "trailingComma" : "es5",
  "bracketSpacing": true,
  "jsxSingleQuote": true,
  "arrowParens"   : "always",
  "quoteProps"    : "consistent"
}
