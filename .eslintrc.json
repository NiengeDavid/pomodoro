{
  "$schema": "https://json.schemastore.org/eslintrc",
  "extends": ["next/core-web-vitals", "prettier"],
  "rules"  : {
    "no-process-env": "error"
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cn"],
      "config" : "./tailwind.config.ts"
    },
    "next": {
      "rootDir": ["./"]
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@next/next/no-img-element": "off"  // fk next/image
      }
    }
  ]
}
